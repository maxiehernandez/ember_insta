<!-- Here I will add a form to upload a new photo. -->

{{input class="form-control" id="file-field" type="file" value=thumbnailImage}}
<!-- <p><input type='file' id='file-field'></p> -->

<br>

<form class="form-horizontal col-sm-4 col-md-offset-4 post-top-margin">
  <div class="form-group">
    <label class="col-sm-2 control-label">Picture URL</label>
    <div class="col-sm-10">
      {{input class="form-control" type="text" value=imageUrl}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input class="form-control" type="text" value=name}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Caption</label>
    <div class="col-sm-10">
      {{input class="form-control" type="text" value=caption}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      {{#link-to 'posts' class="btn btn-warning"}}Back{{/link-to}}

      <div class="btn btn-info">
        {{new-post imageUrl=model.imageUrl name=model.name caption=model.caption newPost="newPost"}}
      </div>
    </div>
  </div>
</form>
