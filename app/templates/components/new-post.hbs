
<div class="container">
  <div class="form-box col-md-6 col-md-offset-3 form-top-margin">
    <form class="form-horizontal col-md-10 col-md-offset-1">
      <div class="form-group">
        <label class="col-sm-2 control-label form-text">Upload</label>
        <div class="col-sm-10">
          <input id="fileupload" class="input_field form-text" type="file" name="files[]" accept="audio/*|video/*|image/*|MIME_type" multiple/>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label form-text">Picture URL</label>
        <div class="col-sm-10">
          {{input class="form-control" type="text" value=imageUrl}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label form-text">Name</label>
        <div class="col-sm-10">
          {{input class="form-control" type="text" value=fileName}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label form-text">Caption</label>
        <div class="col-sm-10">
          {{input class="form-control" type="text" value=caption}}
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          {{#link-to 'posts' class="btn btn-grey"}}Back{{/link-to}}
          <div class="btn btn-grey">
            <span {{action "createNewPost"}}>Submit</span>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
