{{yield}}


<form class="form-horizontal col-sm-4 col-md-offset-4 post-top-margin">
  <div class="form-group">
    <label class="col-sm-2 control-label">Picture URL</label>
    <div class="col-sm-10">
      {{input class="form-control" type="text" value=newPost.imageUrl}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input class="form-control" type="text" value=newPost.name}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Caption</label>
    <div class="col-sm-10">
      {{input class="form-control" type="text" value=newPost.caption}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      {{#link-to 'posts' class="btn btn-warning"}}Back{{/link-to}}

      <div class="btn btn-info">
        <span {{action "createNewPost"}}>Submit</span>
      </div>
    </div>
  </div>
</form>
