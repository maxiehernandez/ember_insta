{{yield}}

<form class="form-horizontal col-sm-4 col-md-offset-4">
  <div class="form-group">
    <label class="col-sm-2 control-label">Picture URL</label>
    <div class="col-sm-10">
      {{input class="form-control" type="text" value=model.imageUrl}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input class="form-control" type="text" value=model.name}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Caption</label>
    <div class="col-sm-10">
      {{input class="form-control" type="text" value=model.caption}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      {{#link-to 'posts' class="btn btn-default"}}Cancel{{/link-to}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <span {{action "updatePost" model class="btn btn-default"}}>Update</span>
    </div>
  </div>

</form>
